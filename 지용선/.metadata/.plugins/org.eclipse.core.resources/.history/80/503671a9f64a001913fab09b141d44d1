	public String toString() {
		return userName +" ´ÔÀÇ ÀÜ¾× : " + cash.getRemainCash() + " ¿ø, ±¸¸Å ¾ÆÀÌÅÛ °¹¼ö : " + holdItem.getTotalCnt() + ", ÇÃ·¹ÀÌ È½¼ö : " + playTime;
	}
}
