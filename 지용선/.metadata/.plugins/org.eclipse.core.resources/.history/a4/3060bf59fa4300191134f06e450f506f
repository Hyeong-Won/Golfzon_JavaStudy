import java.util.Scanner;


public class Billing {
	final static int USERREGIST    = 1;
	final static int CASHINS       = 2;
	final static int PURCHASEITEM  = 3;
	final static int SHOWALLUSER   = 4;
	final static int TERMINATECODE = 5;
	
	final String[] itemName    = {"100시간", "200시간", "300시간"};
	final int   [] itemPrice   = {1000,     2000,     3000};  
	
	static String[] userName    = null;
	static int   [] userBalance = null;

	public static void main(String[] args) {
		Scanner scan      = new Scanner(System.in);
		int     userInput = 0;
		
		do {
			userInput = PrintMenu(scan);
			
			switch(userInput){
			case USERREGIST:
				break;
			case CASHINS:
				break;
			case PURCHASEITEM:
				break;
			case SHOWALLUSER:
				break;
			default:
				break;
			}
		} while(userInput != TERMINATECODE);
		// TODO Auto-generated method stub
		
	}
	
	public static int PrintMenu(Scanner scan)
	{
		System.out.println("1: 유저등록");
		System.out.println("2: 캐시충전");
		System.out.println("3: 구매");
		System.out.println("4: 전체유저보기");
		System.out.println("5: 종료");
		return scan.nextInt(); 
	}
	
	public static void RegUser(){
		System.out.println("유저 이름을 입력하세요 : ");
	}

}
