package common;

import billing.CashManager;
import common.CommonConst.UseState;

public class User {
	private String          userName;
	private int				playTime;
	private CashManager     cash;
	private HoldItemManager holdItem;
	
	public User() {
		cash     = new CashManager();
		holdItem = new HoldItemManager();
	}
	
	public CashManager getCash() {
		return cash;
	}
	
	public HoldItemManager getHoldItem() {
		return holdItem;
	}

	public String getUserName() {
		return userName;
	}

	public void setUserName(String userName) {
		this.userName = userName;
	}
	
	public int getPlayTime() {
		return playTime;
	}

	public void setPlayTime(int playTime) {
		this.playTime = playTime;
	}

	@Override
	public String toString() {
		return userName +" 님의 잔액 : " + cash.getRemainCash() + " 원, 구매 아이템 갯수 : " +
			   (holdItem.getHoldItemCntByCodeCount(CommonConst.ITEMCODE2222,UseState.정상) + holdItem.getHoldItemCntByCodeCount(CommonConst.ITEMCODE2222,UseState.사용))  + ", 플레이 횟수 : " + playTime;
	}
}
